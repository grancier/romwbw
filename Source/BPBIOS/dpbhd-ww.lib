;<<< --- Drive M is used for RAM Drive --- >>>

	  IF  DRV_N
	DEFB	'ROM      ',' '+80H ; Id - 10 bytes
	DEFB	FIXDSK		    ; Format type byte 0
	DEFB	SPEED8+SEC512+ALC2K ; Format type byte 1
	DEFB	-2		; Skew factor
