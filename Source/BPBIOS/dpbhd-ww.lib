HSIZ8	EQU	HB_ROMBLKS

DPB58:	DEFW	64	; Scts/Trk
	DEFB	4	; Blk Shf Fctr
	DEFB	15	; Block Mask
	  IF ((HSIZ8 - 1) < 256)
	DEFB	1	; Extent Mask
	  ELSE
	DEFB	0	; Extent Mask
	  ENDIF
	DEFW	HSIZ8-1	; Disk Size-1
	DEFW	255	; Dir Max
