	.XLIST
; CLOCK.LIB  5/29/88 for ZSDOS/ZDDOS Clocks, SLR & EZASM Assemblers
; from CLOCK.LIB 6-17-85 for azm-assembled DateStamper clocks

MHZ	DEFL	33
CURYR	EQU	14H

BYTE	EQU	0
WORD	EQU	1
CR	EQU	0DH
LF	EQU	0AH
ESC	EQU	1BH

NO	DEFL	0
YES	DEFL	NOT NO

GETBC	 MACRO	ADDR
	IFNB	<ADDR>
	LD	HL,ADDR
	ADD	HL,DE
	 ENDIF
	LD	C,(HL)
	INC	HL
	LD	B,(HL)
	 ENDM

PUTBC	 MACRO	ADDR
	IFNB	<ADDR>
	LD	HL,ADDR
	ADD	HL,DE
	 ENDIF
	LD	(HL),C
	INC	HL
	LD	(HL),B
	 ENDM


; get byte from parameters, store at 'to'

SETBYT	 MACRO	FROM,TO
	IFNB	<FROM>
	LD	A,(FROM)
	 ENDIF
	IFNB	<TO>
	LD	HL,TO
	ADD	HL,DE
	LD	(HL),A
	 ENDIF
	 ENDM

OVER2	 MACRO
	DEFB	'Description Too Long'
	 ENDM
	.LIST
